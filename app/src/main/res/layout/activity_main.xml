<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#B0030303"
    android:backgroundTint="#A3533533"
    android:backgroundTintMode="add"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="25pt"
        android:layout_margin="7pt"
        android:background="#025146"
        android:backgroundTint="#CB585858"
        android:gravity="right|center_vertical"
        android:paddingRight="15dp"
        android:scrollbarSize="5sp"
        android:text="0"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8pt"
        android:layout_marginTop="8pt"
        android:layout_marginRight="8pt"
        android:layout_weight="0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2pt">

            <Button
                android:id="@+id/buttonCarre"
                android:layout_width="25pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="X²"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonPow"
                android:layout_width="25pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="Pow"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonSin"
                android:layout_width="25pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="Sin"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonCos"
                android:layout_width="25pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="Cos"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonTan"
                android:layout_width="25pt"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="Tan"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2pt">

            <Button
                android:id="@+id/buttonRacineCarre"
                android:layout_width="25pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="√"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonFact"
                android:layout_width="25pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="n!"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonLog"
                android:layout_width="25pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="log"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonLn"
                android:layout_width="25pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="Ln"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonExpo"
                android:layout_width="25pt"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="exp"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4pt">

            <Button
                android:id="@+id/buttonRacineXY"
                android:layout_width="25pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:backgroundTint="@color/orange"
                android:text="rac"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonPi"
                android:layout_width="25pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="π"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonOpen"
                android:layout_width="25pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="("
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonClose"
                android:layout_width="25pt"
                android:layout_height="15pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text=")"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buttonSupp"
                android:layout_width="25pt"
                android:layout_height="15pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="clear"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2pt">

            <Button
                android:id="@+id/buttonAC"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="AC"
                android:textColor="@color/backInput"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonSinge"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="+/-"
                android:textColor="@color/backInput"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonMod"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="%"
                android:textColor="@color/backInput"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonDiv"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_marginStart="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="÷ "
                android:textColor="@android:color/background_light"
                android:textCursorDrawable="@color/backInput"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2pt">

            <Button
                android:id="@+id/button7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:backgroundTint="@color/gray"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:backgroundTint="@color/gray"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:backgroundTint="@color/gray"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonMul"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginStart="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="X"
                android:textColor="@android:color/background_light"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2pt">

            <Button
                android:id="@+id/button4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:backgroundTint="@color/gray"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:backgroundTint="@color/gray"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:backgroundTint="@color/gray"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonSub"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginStart="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="-"
                android:textColor="@android:color/background_light"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2pt">

            <Button
                android:id="@+id/button1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:backgroundTint="@color/gray"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:backgroundTint="@color/gray"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginRight="2pt"
                android:layout_weight="1"
                android:background="@color/gray"
                android:backgroundTint="@color/gray"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginLeft="2pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:backgroundTint="@color/orange"
                android:text="+"
                android:textColor="@android:color/background_light"
                android:textSize="24sp" />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8pt"
        android:layout_marginRight="8pt"
        android:layout_marginBottom="8pt"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button0"
            android:layout_width="70pt"
            android:layout_height="30pt"
            android:layout_marginRight="2pt"
            android:layout_weight="1"
            android:background="@color/gray"
            android:backgroundTint="@color/gray"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonPoint"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginRight="2pt"
            android:layout_weight="1"
            android:background="@color/gray"
            android:backgroundTint="@color/gray"
            android:text="."
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonEgale"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:layout_marginStart="2pt"
            android:layout_weight="1"
            android:background="@color/orange"
            android:backgroundTint="@color/orange"
            android:text="@string/egale"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>